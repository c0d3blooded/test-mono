{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@treelof/animations": ["libs/animations/src/index.ts"],
      "@treelof/components": ["libs/components/src/index.ts"],
      "@treelof/hooks": ["libs/hooks/src/index.ts"],
      "@treelof/models": ["libs/models/src/index.ts"],
      "@treelof/services": ["libs/services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
